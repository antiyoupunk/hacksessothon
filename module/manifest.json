{
    "name": "accesso ShoWare Deployment Widget",
    "version": "1.1",
    "description": "Checks deployment status of various users to determine if it is all-clear to deploy.",
    "permissions": ["storage","activeTab","declarativeContent","notifications","https://*/"],
    "background": {
      "scripts": ["assets/connect.js","assets/main.js"],
      "persistent": false
    },
    "browser_action": {
        "popup": "view/popup.html",
        "default_icons": {
            "16": "icons/stop-16.png",
            "32": "icons/stop-32.png",
            "48": "icons/stop-48.png",
            "128": "icons/stop-128.png"
        }
    },
    "manifest_version": 2
  }